
#: import Settings screens.settings
#: import TextInputMaxLength screens.entry_add_view

<EntryField@MDBoxLayout>:
    orientation: 'horizontal'
    adaptive_height: True
    padding: [10, 20, 10, 20]
    spacing: 10


<EntryFieldLabel@MDLabel>:
    markup: True
    font_size: '18px'
    valign: 'center'
    halign: 'left'
    size_hint: (.3, 1)


<Separator@Widget>:
    # https://gist.github.com/kived/3f6a638fc4827957f933463954524de5
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
<HSeparator@Separator>:
    size_hint_y: None
    height: dp(2)
<VSeparator@Separator>:
    size_hint_x: None
    width: dp(1)


<SettingsView>:

    id: 'settings_view'
    name: 'settings_view'

    MDAnchorLayout:
        anchor_y: 'top'
        padding: [20, 20, 20, 20]

        MDBoxLayout:
            orientation: 'vertical'
            spacing: 10
            adaptive_height: True

            EntryField:
                padding: [0, 10, 0, 10]

                MDIconButton:
                    icon: 'arrow-left-thick'
                    icon_size: '32sp'
                    #size_hint: (.2, 1)
                    on_release:
                        root.on_back_button()

                MDLabel:
                    text: '[b]Settings[/b]'
                    font_size: '24px'
                    valign: 'center'
                    halign: 'left'
                    size_hint: (.5, 1)
                    markup: True

            HSeparator:
                width: dp(2)

            EntryField:
                EntryFieldLabel:
                    text: 'Dark Theme'

                MDSwitch:
                    id: dark_theme_switch
                    active: root.get_dark_theme_value()
                    on_active:
                        root.on_dark_theme_switch(self.active, app.theme_cls)

